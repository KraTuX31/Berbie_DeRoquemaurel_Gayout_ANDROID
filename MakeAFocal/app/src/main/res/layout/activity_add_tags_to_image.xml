<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/add_your_tags" />

    <ImageView
        android:id="@+id/iv_photo_to_tag"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:adjustViewBounds="false"
        android:longClickable="false"
        android:layout_weight="1"/>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/tags"
        android:padding="5dp"
        android:textColor="@color/wallet_hint_foreground_holo_dark"
        android:id="@+id/tv_tags_added"/>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:text="@string/valid"
        android:textColor="@color/common_google_signin_btn_text_dark_pressed"
        android:id="@+id/btn_accept_tags"
        android:onClick="onAcceptButtonClick"
        android:layout_gravity="center_horizontal" />

</LinearLayout>